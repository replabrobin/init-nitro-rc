#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Starting tmpfiles-dev"
        etmpfiles --prefix=/dev --create --boot || stat_die tmpfiles-dev
        add_daemon tmpfiles-dev
        stat_done tmpfiles-dev
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac
